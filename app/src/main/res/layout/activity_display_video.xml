<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_orange_700"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <SurfaceView
            android:id="@+id/surfaceview"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_300"/>

        <LinearLayout
            android:id="@+id/linear_play_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/seekbar_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:background="@color/color_gray_dark"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/image_play"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_play_video"/>

                <TextView
                    android:id="@+id/text_curation_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/image_play"
                    android:layout_toRightOf="@+id/image_play"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/text_duration_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/text_curation_time"
                    android:layout_toRightOf="@+id/text_curation_time"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/white"/>

                <ImageView
                    android:id="@+id/image_fullscreen"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_fullscreen"/>
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/image_pause_lage"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:layout_gravity="center"
            android:src="@drawable/ic_play"/>
    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcl_random_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
