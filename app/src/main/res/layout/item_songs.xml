<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card_view_inner"
                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="@dimen/dp_120"
                                    android:layout_height="@dimen/dp_120"
                                    android:background="@drawable/bg_image_item"
                                    card_view:cardBackgroundColor="@color/color_border_yellow"
                                    card_view:cardCornerRadius="@dimen/dp_10"
                                    card_view:cardElevation="0dp">

    <ImageView
        android:id="@+id/image_item_songs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_margin="@dimen/dp_1"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_image"/>

    <TextView
        android:id="@+id/text_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_80"
        android:gravity="center"
        android:paddingTop="@dimen/dp_4"
        android:text="@string/app_name"
        android:textColor="@color/color_orange"
        android:textSize="@dimen/sp_10"/>
</android.support.v7.widget.CardView>
